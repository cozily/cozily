%div{:'data-content-key' => 'active-tab'}
  .head
    %ul.tabs
      %li.active
        =link_to "Account", edit_user_registration_path, :'data-remote' => 'true', :'data-method' => 'get'
      %li
        =link_to "Profile", edit_profile_path, :'data-remote' => 'true', :'data-method' => 'get'

  .article
    = semantic_form_for @user, :url => user_registration_path, :html => {:method => :put} do |f|
      = f.error_messages
      = f.inputs do
        = f.input :first_name
        = f.input :last_name
        = f.input :email, :as => :string

      = f.buttons do
        = f.commit_button "Update Account"
