- f.inputs do
  I am here to:
  %li.boolean.optional
    %label{ :for => "role_ids_0" }
      =check_box_tag "role_ids[]", Role.find_by_name("finder").id, f.object.role_symbols.include?(:finder), :id => "role_ids_0"
      find apartments

  %li.boolean.optional
    %label{ :for => "role_ids_1" }
      =check_box_tag "role_ids[]", Role.find_by_name("lister").id, f.object.role_symbols.include?(:lister), :id => "role_ids_1"
      list apartments

  %fieldset.finder
    %legend Tell us about your needs.
    - f.object.build_profile unless f.object.profile.present?
    - f.semantic_fields_for :profile do |profile_fields|
      - profile_fields.inputs do
        = profile_fields.input :bedrooms, :label => "Minimum bedrooms", :as => :select, :collection => (0..8)
        = profile_fields.input :rent, :label => "Maximum rent"
        %li
          %label{:for => "neighborhood_autocomplete"} Neighborhoods*
          =text_field_tag "neighborhood_autocomplete", "e.g., Alphabet City", :'data-default-value' => "e.g., Alphabet City"
          %ul#selected_neighborhoods
            -if f.object.profile.present?
              -f.object.profile.neighborhood_profiles.each do |neighborhood_profile|
                %li.removeable
                  =link_to "X", neighborhood_profile, :'data-remote' => true, :'data-method' => 'delete'
                  =neighborhood_profile.neighborhood.name
                  %input{:type => 'hidden', :name => 'user[profile_attributes][neighborhood_ids][]', :value => neighborhood_profile.neighborhood.id}

  %fieldset.lister
    %legend We want to include a phone number with your listings.
    = f.input :phone

