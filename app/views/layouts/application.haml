%html
  %head
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = stylesheet_link_tag 'formtastic.css'
    = stylesheet_link_tag 'compiled/application.css'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'

  %body.bp
    .two-col
      #header
        %h1
          =link_to "Cozily", root_url

        =render "sessions/nav_actions"
        =link_to "new apartment", new_apartment_path

      #content
        #flash
          -flash.each do |key, value|
            %div{:id => "flash_#{key}"}=value

        =yield

      #footer
        ="&copy; #{Time.now.year} Cozily"
