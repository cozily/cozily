%html
  %head
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = stylesheet_link_tag 'formtastic.css'
    = stylesheet_link_tag 'compiled/application.css'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>

    = javascript_include_tag 'jquery'
    = javascript_include_tag 'application'

  %body.bp
    .two-col
      #header
        %h1
          =link_to "Cozily", root_url

        =render "sessions/nav_actions"
        -if current_user
          %ul
            %li=link_to_unless_current "new apartment", new_apartment_path
            %li=link_to_unless_current "my favorites", user_favorites_path(current_user)

      #content
        #flash
          -flash.each do |key, value|
            %div{:id => "flash_#{key}"}=value

        =yield

      #footer
        ="&copy; #{Time.now.year} Cozily"
