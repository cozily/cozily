%html
  %head
    = stylesheet_link_tag 'formtastic.css'
    = stylesheet_link_tag 'formtastic_changes.css'
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = stylesheet_link_tag 'jquery-ui.css'
    = stylesheet_link_tag 'compiled/application.css'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'

    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
    = javascript_include_tag 'jquery'
    = javascript_include_tag 'jquery-ui'
    = javascript_include_tag 'application'

  %body.bp
    .two-col
      #header
        %h1
          =link_to "Cozily", root_url

        =render "sessions/nav_actions"
        %ul
          %li=link_to_unless_current "neighborhoods", neighborhoods_path
          %li=link_to_unless_current "search", search_path
          -if can? :create, Apartment
            %li=link_to_unless_current "new apartment", new_apartment_path
          -if current_user
            %li=link_to_unless_current "my favorites", user_favorites_path(current_user)
          -if current_user && current_user.apartments.present?
            %li=link_to_unless_current "my apartments", user_apartments_path(current_user)

      #content
        #flash
          -flash.each do |key, value|
            %div{:id => "flash_#{key}"}=value

        =yield

      #footer
        ="&copy; #{Time.now.year} Cozily"

      :javascript
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-6802573-2']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
