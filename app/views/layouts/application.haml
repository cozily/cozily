%html
  %head
    = stylesheet_link_tag 'formtastic'
    = stylesheet_link_tag 'formtastic_changes'
    = stylesheet_link_tag 'screen', :media => 'screen, projection'
    = stylesheet_link_tag 'jquery-ui'
    = stylesheet_link_tag 'application'

    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
    = javascript_include_tag "http://use.typekit.com/pfb5tao.js"
    = javascript_include_tag 'jquery'
    = javascript_include_tag 'jquery-ui'
    = javascript_include_tag 'jquery.scrollTo'
    = javascript_include_tag 'ajaxupload'
    = javascript_include_tag 'application'

    :javascript
      try{Typekit.load();}catch(e){}

    %title
      Cozily

  %body{:class => "#{controller.controller_name} #{controller.action_name}"}
    #head
      .container
        %h1
          =link_to "Cozily", root_url

        %ul.nav
          %li=link_to_unless_current "neighborhoods", neighborhoods_path
          %li=link_to_unless_current "search", search_path
          -if current_user
            %li=link_to_unless_current "my favorites", user_favorites_path(current_user)
          -if current_user && current_user.apartments.present?
            %li=link_to_unless_current "my apartments", user_apartments_path(current_user)

        =render "sessions/nav_actions"

    #search

    #breadcrumbs

    #body
      .container
        #flash
          -flash.each do |key, value|
            %div{:id => "flash_#{key}"}=value

        =yield

    #foot
      .container
        %ul
          %li=link_to "About", about_path
          %li=link_to "FAQ", faq_path
          %li=link_to "Privacy Policy", "#"
          %li=link_to "Terms of Use", "#"
          %li=link_to "New Apartment", apartments_path, :method => :post
          %li.copyright="&copy; #{Time.now.year} Cozily All Rights Reserved"

    :javascript
      window._token = '#{form_authenticity_token}';

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-6802573-2']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
