%div{:'data-content-key' => 'active-tab'}
  .head
    %h1==Hi, #{current_user.first_name}

    .lady
      %span=="Wow #{current_user.first_name}, that's a fabulous shirt you're wearing"

    %ul.tabs
      %li.active=link_to "Matches", dashboard_matches_path, :'data-remote' => true
      %li=link_to "Favorites", dashboard_favorites_path, :'data-remote' => true
      %li=link_to "Inbox", dashboard_messages_path, :'data-remote' => true

  .article
    =pagination_summary(params[:page], Apartment.with_state(:listed))
    =will_paginate(matches, :renderer => AjaxPaginationLinkRenderer)
    -matches.each do |apartment|
      =render "dashboard/apartment", :apartment => apartment, :position => position_in_collection(apartment, Apartment.with_state(:listed))