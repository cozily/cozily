%div[apartment]
  %ul
    %li.photo
      .image
        -if apartment.images.present?
          =link_to(image_tag(apartment.images.first.asset.url(:medium)), apartment)
        -else
          =link_to(image_tag("defaults/apartment/medium.jpg"), apartment)
      .count=position
    %li.info
      %ul
        %li.street=link_to apartment.street, apartment
        %li.basic
          %span.rent==$#{number_with_delimiter(apartment.rent)}
          ==/ #{apartment.bedrooms.prettify}bd/#{apartment.bathrooms.prettify}ba / #{apartment.square_footage} sq. ft.
        %li.neighborhood==Neighborhood: #{neighborhood_links(apartment.neighborhoods)}
        %li.published_on==Published on #{apartment.published_at.try(:to_date).try(:to_s, :app_long)}

    %li.contact
      %ul
        %li.phone=number_to_phone(apartment.user.phone, :area_code => true)
        %li.message
          =link_to "send message", "#", :'data-apartment-id' => apartment.id
          =render "messages/dialog", :apartment => apartment
        %li.favorite=render "favorites/link", :apartment => apartment, :count => position

