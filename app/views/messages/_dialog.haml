.message_dialog{:title => "Message about #{apartment.street}", :id => "message_dialog_#{apartment.id}"}
  %p Contact Landlord

  = semantic_form_for [apartment, Message.new], :html => { :'data-remote' => true } do |form|
    =form.error_messages

    = form.inputs do
      = form.input :body, :as => :text, :label => "Dear Landlord/Agent..."
